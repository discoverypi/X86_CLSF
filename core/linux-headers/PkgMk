# Description: Linux kernel for Rpi
# URL: https://kernel.org
# Maintainer: Remi Pommarel, repk at triplefau dot lt


NAME=linux-headers
VERSION=3.19


DEPENDS=""
SOURCES="https://www.kernel.org/pub/linux/kernel/v3.x/linux-3.19.tar.xz"


pkgmain() {
mkdir ${PKG}/lib64
ln -s lib64 ${PKG}/lib
mkdir ${PKG}/usr
mkdir ${PKG}/usr/lib64
ln -s lib64 ${PKG}/usr/lib
	cd linux-3.19

	make mrproper
	make CROSS_COMPILE=${CLFS_TARGET}- headers_check
	make CROSS_COMPILE=${CLFS_TARGET}-			\
		INSTALL_HDR_PATH=${PKG}/usr headers_install
}
